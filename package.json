  "main": "lib/badge.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/badges/shields"
  },
  "dependencies": {
    "camp": "~16.2.3",
    "chrome-web-store-item-property": "~1.1.2",
    "dot": "~1.0.3",
