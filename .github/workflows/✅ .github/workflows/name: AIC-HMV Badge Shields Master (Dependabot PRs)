name: AIC-HMV Badge Shields Master (Dependabot PRs)

on:
  pull_request:
    types: [opened]

permissions:
  pull-requests: write

jobs:
  badge-shields-enforcer:
    runs-on: ubuntu-latest
    if: github.actor == 'dependabot[bot]'

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Install AIC-HMV Badge Checker
        run: |
          cd .github/actions/aic-hmv-badge-enforcer
          npm ci

      - name: Run AIC-HMV Badge Shields Checker
        uses: ./.github/actions/aic-hmv-badge-enforcer
        with:
          github-token: '${{ secrets.GITHUB_TOKEN }}'
